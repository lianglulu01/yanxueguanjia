/* pages/relatedList/relatedList.wxss */

page {
  background: #F6F6F6;
}



.content_bottom {

  background-color: #fff;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 1110rpx;
  border-radius: 39rpx 39rpx 0px 0px;
  padding: 31rpx 27rpx;
  box-sizing: border-box;
}

.add_button {
  width: 697rpx;
  height: 78rpx;
  background-color: #f2f6ff;
  /* text-align: center; */
  /* line-height: 78rpx; */
  border-radius: 39rpx;
  color: #1f7bfb;
  align-items: center;
  display: flex;
  justify-content: center;
  font-weight: 600;
  position: relative;
}

.add_button image {
  width: 30rpx;
height: 28rpx;
position: absolute;
left: 250rpx;
top: 27rpx;
z-index: 99;
}

.item {
  height: 112rpx;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #f0f0f0;
  position: relative;
}

.circle {
  width: 23rpx;
  height: 23rpx;
  border: 1rpx solid rgba(203, 203, 203, 1);
  border-radius: 50%;
  margin-right: 30rpx;
  display: none;
}

.student_avator image {
  width: 53rpx;
  height: 53rpx;
  border-radius: 50%;
}

.student_new {
  margin-left: 19rpx;
}

.student_name {
  font-size:30rpx;
font-weight:bold;
color:rgba(51,51,51,1);
}

.student_phone {
  font-size: 20rpx;
  color: #616161;
  margin-top: 9rpx;
}

.student_id {
  font-size: 20rpx;
  color: #616161;
  margin-top: 9rpx;
}

.student_num {
  width: 135rpx;
  font-size: 20rpx;
  color: #616161;
  margin-top: 9rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.num {
  font-size: 20rpx;
  font-weight: 400;
  color: rgba(31, 123, 251, 1);
}

.student_right {
  width:106rpx;
height:46rpx;
background:rgba(255,69,39,1);
box-shadow:0px 4rpx 7rpx 0px rgba(255,69,39,0.24);
border-radius:23rpx;
font-size:30rpx;
font-weight:400;
color:rgba(255,255,255,1);
line-height:46rpx;
text-align: center;
position: absolute;
right: 60rpx;
top: 32rpx;
}
.student_right2 {
  width:106rpx;
height:46rpx;
