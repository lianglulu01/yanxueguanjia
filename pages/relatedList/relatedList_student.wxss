box-shadow:0px 4rpx 7rpx 0px rgba(255,69,39,0.24);
border-radius:23rpx;
font-size:30rpx;
font-weight:400;
color:rgba(255,255,255,1);
line-height:46rpx;
text-align: center;
position: absolute;
right: 60rpx;
top: 32rpx;
}
.sure_button {
  /* width: 729rpx; */
  width: 90%;
  height: 78rpx;
  background: linear-gradient(122deg, rgba(85, 172, 250, 1) 0%, rgba(25, 121, 243, 1) 100%);
  border-radius: 39rpx;
  position: fixed;
  bottom: 10rpx;
  left: 5%;
  line-height: 78rpx;
  color: #fff;
  text-align: center;
  box-sizing: border-box;
  display: none;
}

.btn-share {
  background-color: #f2f6ff;
  color: #1f7bfb;
  width: 100%;
}
