.item {
  height: 112rpx;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #f0f0f0;
  position: relative;
}

.circle {
  width: 23rpx;
  height: 23rpx;
  border: 1rpx solid rgba(203, 203, 203, 1);
  border-radius: 50%;
  margin-right: 30rpx;
  display: none;
}

.student_avator image {
  width: 53rpx;
  height: 53rpx;
  border-radius: 50%;
}

.student_new {
  margin-left: 19rpx;
}

.student_name {
  font-size:30rpx;
font-weight:bold;
color:rgba(51,51,51,1);
}

.student_phone {
  font-size: 20rpx;
  color: #616161;
  margin-top: 9rpx;
}

.student_id {
  font-size: 20rpx;
