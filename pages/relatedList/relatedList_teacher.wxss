
/* pages/relatedList/relatedList.wxss */

page {
  background:#FFF;
}
.content_bottom {
  background-color: #fff;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 1110rpx;
  border-radius: 39rpx 39rpx 0px 0px;
  padding: 31rpx 27rpx;
  box-sizing: border-box;
}

.add_button {
  width: 697rpx;
  height: 78rpx;
  background-color: #f2f6ff;
  /* text-align: center; *//* line-height: 78rpx; */
  border-radius: 39rpx;
  color: #1f7bfb;
  align-items: center;
  display: flex;
  justify-content: center;
  font-weight: 600;
  position: relative;
}

.add_button image {
  width: 30rpx;
  height: 28rpx;
  margin-right: 20rpx;
  position: absolute;
  left: 246rpx;
  top: 28rpx;  
  z-index: 99;
}

.item {
  display: flex;
  align-items: center;
  padding: 40rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
  position: relative;
}

.circle {
  width: 23rpx;
  height: 23rpx;
  border: 1rpx solid rgba(203, 203, 203, 1);
  border-radius: 50%;
  margin-right: 30rpx;
  display: none;
}

.student_avator image {
  width: 82rpx;
  height: 82rpx;
  border-radius: 41rpx;
}

.student_new {
  margin-left: 19rpx;
}

.student_name {
  color: #333;
  font-size: 30rpx;
  font-weight: 600;
}

.student_phone {
  font-size: 20rpx;
  color: #616161;
  margin-top: 9rpx;
}

.student_id {
  font-size: 20rpx;
  color: #616161;
  margin-top: 9rpx;
}

.sure_button {
  /* width: 729rpx; */
  width: 90%;
  height: 78rpx;
  background: linear-gradient(122deg, rgba(85, 172, 250, 1) 0%, rgba(25, 121, 243, 1) 100%);
  border-radius: 39rpx;
  position: fixed;
  bottom: 10rpx;
  left: 5%;
  line-height: 78rpx;
  color: #fff;
  text-align: center;
  box-sizing: border-box;
  display: none;
}
.btn-share{
 background-color: #f2f6ff;
 color: #1f7bfb;
 width: 100%;

}
.student_num {
  width: 135rpx;
  font-size: 20rpx;
  color: #616161;
  margin-top: 9rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.num{
  font-size:20rpx;
font-weight:400;
color: rgba(31,123,251,1);
}
.student_right{
  width:126rpx;
height:40rpx;
background:rgba(31,123,251,1);
box-shadow:0px 5rpx 19rpx 0px rgba(32,97,188,0.24);
border-radius:20rpx;
font-size:26rpx;
font-weight:400;
color:rgba(255,255,255,1);
line-height: 40rpx;
text-align: center;
position: absolute;
top: 41rpx;
right: 37rpx;
}
