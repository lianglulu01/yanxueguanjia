      </view>

      <view class="billing" bindtap="detail" data-id="{{item.activity.id}}">
        <view class="billing_left">
          <image src="{{item.activity.pic_url[0]}}"></image>
        </view>
        <view class="billing_center">
          <view class="center_text">
            {{item.activity.name}}
          </view>
        </view>
        <view class="billing_right">
          <view>立即进入</view>
          <image src="../../images/arrow.png"></image>
        </view>
      </view>
      <view class="operating">
              <image wx:if="{{item.is_agreen}}" bindtap="dz" data-circel_id="{{item.id}}" style="width:47rpx;height:47rpx;" src="../../images/ydz.png"></image>
           <image wx:else bindtap="dz" data-circel_id="{{item.id}}" style="width:40rpx;height:40rpx;" src="../../images/wdz.png"></image>
        <view class="operating_num">{{item.like}}</view>
         <view class="iconfont icontubiaozhizuo-" bindtap="toComment" data-id="{{item.id}}" data-user_id="" data-circel_id="{{item.id}}" data-activity_id="{{item.activity_id}}" style="font-size:42rpx;color:#FC6A1A"></view>
        <view class="operating_num">{{item.comment_num}}</view>
         <button class="iconfont iconzhuanfa1" style="font-size:42rpx" open-type="share"></button>
      </view>
      <view class="comment_list">
        <view class="comment_item {{items.to_user_id?'sj':''}}" bindtap="toComment"  wx:for-item="items" data-user_id="{{items.user_id}}" data-id="{{item.id}}" data-circel_id="{{item.id}}" data-activity_id="{{item.activity_id}}"  wx:for="{{item.comment}}" wx:key="{{index}}">
          <view class="comment_name">{{items.send_nickname}}:</view>
          <view class="comment_val">{{items.text}}</view>
        </view>
      </view>
      <!-- <view >查看全部评论</view> -->
       <view class="comment_num "  wx:if="{{item.comment.length>2}}">
              查看全部评论
          </view> 
    </view>
  </view>
