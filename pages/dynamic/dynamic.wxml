        <view class="time">{{item.time}}</view>
        <view class="item_content">
               {{item.content}}
        </view>
        <view class="jgg">
           <view class="section">
              <view class="tui-table-view">
              <!-- 循环图片 -->
                <view class="tui-col-3" wx:for="{{item.images}}" wx:key="{{index}}">
                    <view class="img">
                         <image src="{{item}}" style="width:100%;height:100%;"></image>
                    </view>
                </view>
              </view>
            </view>

