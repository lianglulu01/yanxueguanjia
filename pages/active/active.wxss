/* tab栏切换 */

.index_tab .bottom_scroll {
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  line-height: 83rpx;
  border-bottom: 4rpx solid #f9f9f9;
}

.index_tab .bottom_scroll .nav {
  width: 88rpx;
  display: inline-block;
  white-space: normal;
  text-align: center;
  font-size: 30rpx;
  color: #545454;
  line-height: 40rpx;
  margin-left: 32rpx;
  /* opacity: 0.6; */
  margin-right: 10rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}

.cur {
  color: #000;
  background-color: #fff;
}

.index_tab .bottom_scroll .select {
  /* background-color: #00c19c; */
  color: #000;
  /* border-bottom: 2rpx solid  linear-gradient(90deg, rgba(212, 230, 255, 0.72), rgba(26, 120, 252, 0.72)); *//* border-bottom: 2rpx solid #000; */
  font-size: 32rpx;
  font-weight: 600;
  /* display: flex;
  align-items: center; *//* opacity: 1; */
}

.border {
  height: 6rpx;
  width: 50rpx;
  /* background-color: linear-gradient(90deg, rgba(212, 230, 255, 0.72), rgba(26, 120, 252, 0.72)); */
  background: linear-gradient(90deg, rgba(212, 230, 255, 0.72), rgba(26, 120, 252, 0.72));
  margin-left: 19rpx;
  margin-top: 10rpx;
}

/* tab栏切换end */

/* 顶部的信息start */

.active_new {
  display: flex;
  padding: 24rpx 31rpx 23rpx 51rpx;
  box-sizing: border-box;
}

.active_left {
  display: flex;
  flex-wrap: wrap;
}

.left_title {
  color: #333;
  font-size: 30rpx;
  font-weight: 600;
  width: 100%;
  text-align: left;
}

.left_center {
  font-size: 26rpx;
  color: #666;
  width: 100%;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}

.left_center .people {
  color: #fb8600;
}

.left_bottom {
  font-size: 26rpx;
  color: #666;
  width: 100%;
  padding: 0 10rpx;
}

.active_right {
  margin-left: 100rpx;
}

.right_arr {
  width: 20rpx;
  height: 20rpx;
  margin-left: 10rpx;
}

.right_top {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}
.right_bottom{
  margin-top: 30rpx;
}
.right_bottom .button {
  width: 138rpx;
  height: 49rpx;
  color: #fff;
  font-size: 30rpx;
  background: linear-gradient(-10deg, rgba(18, 97, 208, 1), rgba(26, 120, 252, 1));
  box-shadow: 0px 0px 13px 0px rgba(22, 108, 230, 0.43);
  border-radius: 25rpx;
  text-align: center;
  line-height: 49rpx;
}

/* 顶部信息end */

