/* pages/activeDetail/activeDetail.wxss */

page {
  background-color: #f5f5f5;
}

.u-wrp-bnr {
  width: 100%;
  height: 390rpx;
  display: block;
  /* position: relative;
  top: 100rpx; */
  background: #f0f0f0;
}

.u-img-slide {
  width: 100%;
  height: inherit;
}

.carousel {
  position: relative;
}

.num {
  position: absolute;
  bottom: 16rpx;
  right: 30rpx;
  width: 80rpx;
  height: 32rpx;
  background: #ccc;
  /* opacity: 0.68; */
  border-radius: 16rpx;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
}

.content_top {
  background-color: #fff;
  display: flex;
  padding: 20rpx 30rpx;
  justify-content: space-between;
  box-sizing: border-box;
  height: 111rpx;
}

.top_left .top_title {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.top_left .top_money {
  font-size: 30rpx;
  color: #ff3200;
  margin-top: 8rpx;
}

.top-right {
  display: flex;
  font-size: 26rpx;
  color: #333;
  /* margin-top: 100rpx; */
  align-items: flex-end;
  height: 82rpx;
}

.top-right image {
  width: 30rpx;
  height: 30rpx;
}

.item {
  display: flex;
  padding: 28rpx;
  background-color: #fff;
  margin-top: 14rpx;
  align-items: center;
  justify-content: space-between;
}

.item_left {
  display: flex;
}

.item_title {
  color: #999;
  font-size: 30rpx;
  margin-right: 32rpx;
}

.item_name {
  color: #333;
  font-size: 28rpx;
  font-weight: 400;
}

.item_val image {
  width: 33rpx;
  height: 39rpx;
}

/* 活动安排的列表start */

.plan_list {
  margin-top: 14rpx;
  background-color: #fff;
  padding-bottom: 70rpx;
}

.plan_title {
  padding: 32rpx 29rpx;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.plan_item {
  padding-left: 49rpx;
  box-sizing: border-box;
  padding-top: 21rpx;
  margin-bottom: 41rpx;
}

.plan_time {
  width: 114rpx;
  height: 29rpx;
  background: rgba(26, 120, 252, 1);
  border-radius: 1rpx;
  font-size: 22rpx;
  color: #fff;
  text-align: center;
  line-height: 29rpx;
}

.plan_content {
  font-size: 24rpx;
  color: #333;
  margin: 16rpx 0 19rpx 0;
}

.plan_img {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.plan_img image {
  width: 125rpx;
  height: 125rpx;
}

.img_item {
  margin-right: 14rpx;
}

/* 注意事项 */

.notice {
  background-color: #fff;
  margin-top: 14rpx;
  margin-bottom: 80rpx;
}

.notice_title {
  font-size: 30rpx;
  color: #333;
  padding: 26rpx 29rpx;
  border-bottom: 1rpx solid #f5f5f5;
  font-weight: 600;
}

.notice_content {
  font-size: 24rpx;
  color: #999;
  padding: 27rpx 45rpx;
}

.sign_button {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 77rpx;
  background: rgba(26, 120, 252, 1);
  color: #fff;
  font-size: 32rpx;
  line-height: 77rpx;
  text-align: center;
}
