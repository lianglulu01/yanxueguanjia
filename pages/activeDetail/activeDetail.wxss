/* pages/activeDetail/activeDetail.wxss */

page {
  background-color: #f5f5f5;
}

.u-wrp-bnr {
  width: 100%;
  height: 390rpx;
  display: block;
  /* position: relative;
  top: 100rpx; */
  background: #f0f0f0;
}

.u-img-slide {
  width: 100%;
  height: inherit;
}

.carousel {
  position: relative;
}

.num {
  position: absolute;
  bottom: 16rpx;
  right: 30rpx;
  width: 80rpx;
  height: 32rpx;
  background: #ccc;
  /* opacity: 0.68; */
  border-radius: 16rpx;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
}

.content_top {
  background-color: #fff;
  /* display: flex; */
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  min-height: 111rpx;
}

.top_left .top_title {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.top-right {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #333;
  align-items: flex-end;
  height: 62rpx;
}

.top-right .top_money {
  font-size: 30rpx;
  color: #ff3200;
  margin-top: 8rpx;
}

.top-right image {
  width: 30rpx;
  height: 30rpx;
}

.item {
  display: flex;
  padding: 28rpx;
  background-color: #fff;
  margin-top: 14rpx;
  align-items: center;
  justify-content: space-between;
}

.item_left {
  display: flex;
}

.item_title {
  color: #999;
  font-size: 30rpx;
  margin-right: 32rpx;
}

.item_name {
  color: #333;
  font-size: 28rpx;
  font-weight: 400;
}

.item_val image {
  width: 33rpx;
  height: 39rpx;
}

/* 活动安排的列表start */

.plan_list {
  margin-top: 14rpx;
  background-color: #fff;
  padding-bottom: 70rpx;
}

.plan_title {
  padding: 32rpx 29rpx;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.plan_item {
  padding-left: 49rpx;
  box-sizing: border-box;
  padding-top: 21rpx;
  margin-bottom: 41rpx;
}

.plan_time {
  width: 150rpx;
  height: 29rpx;
  background: rgba(26, 120, 252, 1);
  border-radius: 1rpx;
  font-size: 22rpx;
  color: #fff;
  text-align: center;
  line-height: 29rpx;
}

.plan_content {
  font-size: 24rpx;
  color: #333;
  margin: 16rpx 0 19rpx 0;
}

.plan_img {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.plan_img image {
  width: 125rpx;
  height: 125rpx;
}

.img_item {
  margin-right: 14rpx;
}

/* 注意事项 */

.notice {
  background-color: #fff;
  margin-top: 14rpx;
  margin-bottom: 80rpx;
}

.notice_title {
  font-size: 30rpx;
  color: #333;
  padding: 26rpx 29rpx;
  border-bottom: 1rpx solid #f5f5f5;
  font-weight: 600;
}
.notice_content-box{
  padding: 27rpx 45rpx;
}
.notice_content {
  font-size: 24rpx;
  color: #999;
  margin: 27rpx 45rpx;
}

.sign_button {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 77rpx;
  background: rgba(26, 120, 252, 1);
  color: #fff;
  font-size: 32rpx;
  line-height: 77rpx;
  text-align: center;
}

/* 弹框 */

.msg {
  position: fixed;
  top: 200rpx;
  left: 67rpx;
  width: 607rpx;
  height: 640rpx;
  z-index: 99;
}

.authorize_content {
  z-index: 999;
  text-align: center;
  margin-top: 209rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #1b1b1b;
  position: fixed;
  top: 324rpx;
  left: 191rpx;

}

.msg image {
  width: 551rpx;
  height: 640rpx;
  position: fixed;
  top: 200rpx;
  left: 101rpx;
}

.button_authorize {
  width: 100%;
  height: 57rpx;
}

.button_content {
  position: fixed;
  top: 200rpx;
  left: 67rpx;
}

.min {
  font-size: 20rpx;
  color: #6c6c6c;
  margin-top: 49rpx;
  font-weight: 400;
}

.btn {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 59rpx;
}

.cancel {
  width: 149rpx;
  height: 57rpx;
  border: 1rpx solid rgba(26, 120, 252, 1);
  border-radius: 29rpx;
  line-height: 57rpx;
  color: #227dfc;
  font-size: 30rpx;
}

#sure {
  width: 149rpx;
  color: #fff;
  background: linear-gradient(0deg, rgba(26, 120, 252, 1), rgba(142, 189, 254, 1));
  border-radius: 29px;
  margin-left: 76rpx;
  padding: 0rpx;
  font-size: 30rpx;
  height: 57rpx;
  line-height: 57rpx;
}

.air {
  position: fixed;
  top: 0;
  left: 0;
  background-color: #000;
  opacity: 0.5;
  height: 100%;
  width: 100%;
  z-index: 96;
}

/* 弹框end */
