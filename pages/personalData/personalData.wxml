<view class="content">
  <view class="list">
    <view class="item">
      <view class="item_name">头像</view>
      <view class="item_val">
        <image src="{{info.avatar_url}}"></image>
      </view>
    </view>
    <view class="item">
      <view class="item_name">真实姓名</view>
      <view class="item_val">
        <input name="rolename" value="{{info.rolename}}"></input>
      </view>
    </view>

    <view class="item">
      <view class="item_name">学校</view>
      <view class="item_val">
        <input name="school" value="{{info.school}}"></input>
      </view>
    </view>

    <view class="item">
      <view class="item_name">班级</view>
      <view class="item_val">
        <input name="class_name" value="{{info.class_name}}"></input>
      </view>
    </view>

    <view class="item">
      <view class="item_name">手机号</view>
      <view class="item_val">
        <input name="rolename" value="{{info.phone}}"></input>
      </view>
    </view>
    <view class="item">
      <view class="item_name">身份证号</view>
      <view class="item_val">
        <input name="rolename" value="{{info.id_card}}"></input>
      </view>
    </view>
  </view>
