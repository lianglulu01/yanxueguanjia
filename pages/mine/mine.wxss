page {
  height: 100%;
}

.content {
  background-color: #f7f4f8;
  height: 100%;
}

.top {
  /* background-color: #55acfa; */
  position: relative;
  height: 295rpx;
  background: linear-gradient(122deg, rgba(85, 172, 250, 1) 0%, rgba(25, 121, 243, 1) 100%);
}

.top .background_img {
  width: 100%;
  position: absolute;
  top: 50rpx;
  left: 0;
  height: 283rpx;
}

.top_content {
  position: absolute;
  top: 130rpx;
  left: 0;
  z-index: 99;
  width: 100%;
  display: flex;
  padding: 0 80rpx;
  justify-content: space-between;
  box-sizing: border-box;
}

.top_left {
  width: 130rpx;
  height: 130rpx;
  border-radius: 65rpx;
}

.top_left image {
  width: 130rpx;
  height: 130rpx;
  border-radius: 65rpx;
}

.top_right {
  text-align: left;
  color: #fff;
  width: 430rpx;
  display: flex;
  flex-wrap: wrap;
}

.top_right .name {
  display: flex;
  justify-content: space-between;
  /* align-items: center; */
  font-size: 38rpx;
  width: 100%;
}

.top_right .phone {
  width: 50%;
  height: 35rpx;
  background: rgba(90, 172, 253, 1);
  border-radius: 15rpx;
  font-size: 24rpx;
  text-align: center;
  margin-top: 40rpx;
  padding: 0rpx 13rpx;
  box-sizing: border-box;
}

.top_right .age {
  width: 38%;
  font-size: 26rpx;
  padding-left: 10rpx;
  box-sizing: border-box;
  height: 28rpx;
  margin-top: 37rpx;
}

.edit {
  width: 35rpx;
  height: 29rpx;
   margin-top: 37rpx;
}

.associate_button{
  font-size: 28rpx;
}
.button_cont{
 z-index: 99;
position: fixed;
right: 44rpx;
top: 128rpx;

}
.associate{
  width: 177rpx;
height: 58rpx;
position: fixed;
right: 36rpx;
top: 119rpx;

}

.activity {
  width: 684rpx;
  height: 212rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
  margin: 20rpx 34rpx;
  box-sizing: border-box;
  padding: 24rpx 27rpx;
}

.activity_top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
}

.activity_arrow {
  width: 22rpx;
  height: 22rpx;
}

.activity_center {
  display: flex;
  justify-content: center;
  align-items: center;
  /* height: 100rpx; */
}

.button {
  position: relative;
  width: 264rpx;
  height: 68rpx;
}

.button_background {
  position: absolute;
  top: 0;
  left: 0;
  width: 264rpx;
  height: 68rpx;
}

.button_content {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 99;
  display: flex;
  width: 264rpx;
  height: 68rpx;
  color: #fff;
  font-size: 24rpx;
  justify-content: center;
  align-items: center;
}

.file {
  width: 39rpx;
  height: 48rpx;
  margin-right: 22rpx;
}

.activity_bottom {
  color: #5db4fb;
  font-size: 20rpx;
  text-align: center;
  margin-top: 30rpx;
}

.item {
  display: flex;
  align-items: center;
  width: 683rpx;
  height: 92rpx;
  background: rgba(255, 255, 255, 1);
  border-radius:10rpx;
  margin: 20rpx 34rpx;
  box-sizing: border-box;
  padding: 20rpx 20rpx;
  justify-content: space-between;
}
.item_name{
  font-size: 24rpx;
  display: flex;
  align-items: center;
}
.item_name image {
  width: 48rpx;
  height: 47rpx;
  margin-right: 35rpx;
}

.item_val image {
  width: 22rpx;
  height: 24rpx;
}
