.content {
  height: 100%;
}

.content_top {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  width: 100%;
  z-index: 999;
}

.location {
  display: flex;
  color: #fff;
  box-sizing: border-box;
  justify-content: center;
  align-items: center;
  padding: 17rpx 31rpx;
  font-size: 24rpx;
}

.location image {
  width: 21rpx;
  height: 27rpx;
  margin-right: 18rpx;
}

.police {
  display: flex;
  color: #fff;
  position: relative;
  height: 45rpx;
  width: 114rpx;
}

.police .police_background {
  position: absolute;
  top: 17rpx;
  right: -20rpx;
  width: 123%;
  height: 100%;
}

.police .police_content {
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 22rpx;
  right: 20rpx;
  font-size: 24rpx;
}

.police_content image {
  width: 22rpx;
  height: 22rpx;
}

.punch {
  display: flex;
  align-items: center;
  width: 688rpx;
  height: 119rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 12px 1px rgba(176, 176, 176, 0.46);
  border-radius: 10rpx;
  margin: 19rpx 31rpx;
  /* padding: 23rpx 23rpx 19rpx 31rpx; */
  justify-content: space-around;
}

.punch_center {
  /* width: 80%; */
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.address {
  width: 100%;
  color: #333;
  font-size: 28rpx;
  margin-bottom: 11rpx;
}

.distance {
  width: 100%;
  font-size: 23rpx;
  color: #999;
}

.punch_left image {
  width: 70rpx;
  height: 76rpx;
  padding-top: 11rpx;
}

.punch_right {
  width: 121rpx;
  height: 46rpx;
  background: linear-gradient(-10deg, rgba(18, 97, 208, 1), rgba(26, 120, 252, 1));
  box-shadow: 0rpx 0rpx 13rpx 0rpx rgba(22, 108, 230, 0.43);
  border-radius: 23rpx;
  color: #fff;
  text-align: center;
  font-size: 23rpx;
  line-height: 46rpx;
}

/* 卡片开始 */

.card {
  width: 688rpx;
  height: 538rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 26rpx 19rpx;
  margin-left: 31rpx;
}

.card_top {
  display: flex;
  justify-content: space-between;
  margin-bottom: 23rpx;
}

.card_left {
  display: flex;
  font-size: 32rpx;
}

.card_right {
  color: #1a78fc;
  font-size: 24rpx;
}

.card_right .image {
  width: 22rpx;
  height: 22rpx;
}

.card_center {
  position: relative;
}

.card_center .img_content {
  position: absolute;
  bottom: 10rpx;
  left: 0;
  background-color: #000;
  opacity: 0.8;
  width: 647rpx;
  height: 73rpx;
  z-index: 99;
  color: #fff;
  line-height: 73rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
  border-radius: 0rpx 0rpx 10rpx 10rpx;
}

.card_center image {
  width: 647rpx;
  height: 282rpx;
  border-radius: 10rpx;
}

.card_bottom {
  display: flex;
  align-items: center;
  /* justify-content: center; *//* margin-top: 22rpx; */
  box-shadow: 0px 0px 13px 0px rgba(176, 176, 176, 0.28);
}

.bottom_left {
  width: 80%;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding-top: 22rpx;
}

.people {
  width: 150rpx;
  font-size: 26rpx;
  color: #fb8600;
  text-align: center;
  border-right: 1rpx solid #000;
}

.time {
  font-size: 26rpx;
  color: #666;
  padding: 0 19rpx;
}

.activeAddress {
  color: #999;
  font-size: 24rpx;
  padding: 24rpx 20rpx;
}

.bottom-right {
  width: 133rpx;
  height: 45rpx;
  background: rgba(255, 255, 255, 1);
  border: 2rpx solid rgba(26, 120, 252, 1);
  border-radius: 23rpx;
  margin-right: 18rpx;
  line-height: 45rpx;
}

.look {
  font-size: 24rpx;
