/* 底部日期导航栏start */

.bottom_nav .bottom_scroll {
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  line-height: 83rpx;
  border-bottom: 4rpx solid #f9f9f9;
  background-color: #fff;
  position: fixed;
  top:0rpx;
}

.bottom_nav{
  margin-bottom: 100rpx;
}

.bottom_nav .bottom_scroll .nav {
  width: 129rpx;
  display: inline-block;
  white-space: normal;
  text-align: center;
  font-size: 28rpx;
  /* color: #545454; */
  color: #999;
  line-height: 40rpx;
  margin-left: 32rpx;
  /* opacity: 0.6; */
  margin-right: 10rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}

.cur {
  color: #000;
  background-color: #fff;
}

.bottom_nav .bottom_scroll .select {
  color: #333;
  font-size: 28rpx;
  font-weight: 600;
}

/* 底部导航end */

.list {
