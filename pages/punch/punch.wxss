}

.list_item {
  margin: 25rpx auto;
  width: 687rpx;
  margin-top: 21rpx;
  /* height: 239rpx; */
  background: rgba(255, 255, 255, 1);
  border-radius: 10px;
  /* display: flex;
  flex-wrap: wrap; */
}

.item_top {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f7f3f7;
  color: #333;
  font-size: 32rpx;
  width: 100%;
  padding: 21rpx 21rpx;
}

.item_top image {
  width: 23rpx;
  height: 31rpx;
}

.item_bottom {
  display: flex;
  justify-content: space-around;
}

.bottom_right {
