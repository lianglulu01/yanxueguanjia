/* pages/index/muActivity.wxss */

page{
  background-color: #f6f4f8
}
.content{
  margin:20rpx 30rpx;
}
.item{
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  width:690rpx;
  position: relative;
}
.item-top{
  height:280rpx;
  position: relative;
  overflow: hidden;
  border-radius: 10rpx;
}
.item-status{
  position: absolute;
  top:0;left:0;
  color:#fff;
  font-size: 22rpx;
  padding: 6rpx 18rpx;
  border-top-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx
}
.item-status-nostart{
  background-color: #1b77fb
}
.item-status-in{
  background-color: #fc8506;
}
.item-status-end{
  background-color: #cccccc
}


.item-singIn{
  position: absolute;
  top:35%;right:0;
  background-color: #fc8506;
  color:#fff;
  font-size: 24rpx;
  padding: 6rpx 15rpx;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx
}
.iconqiandao:before {
  content: "\e878";
  color:#d9fb01;
  font-size: 28rpx;
  padding:0 10rpx;
}
.image-box{
  text-align: center
}

.item image{
  width:690rpx;
  border-radius: 10rpx;
}
.image-box .image{
  width:300rpx;
  height:300rpx;
}
.item-name{
  position: absolute;
  bottom:0;
  width:100%;height:70rpx;
  box-sizing: border-box;
  background-color: rgba(0, 0, 0, 0.4);
  line-height: 70rpx;
  padding-left: 15rpx;
}
.item-name view{
  width:60%;
  color:#fff;
}
.item-bottom{
  display: flex;
  margin-top: 20rpx;
}
.item-people{
  padding:0 20rpx;
  font-size: 26rpx;
  color: #fb8600;
  text-align: center;
  border-right: 1rpx solid #000;
}
.item-time {
  font-size: 26rpx;
  color: #777;
  padding: 0 19rpx;
}
.item-region {
  color: #999;
  font-size: 24rpx;
  padding: 24rpx 20rpx;
}
.detailBtn{
  position: absolute;
  bottom:40rpx;right:30rpx;
  width: 133rpx;
  height: 45rpx;
  font-size: 24rpx;
  color: rgba(26, 120, 252, 1);
  border: 2rpx solid rgba(26, 120, 252, 1);
  text-align: center;
  border-radius: 23rpx;
  margin-right: 10rpx;
  line-height: 45rpx;
}


.card {
  width: 688rpx;
  height: 538rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
  box-sizing: border-box;
  /* padding: 26rpx 19rpx; */
  margin-left: 31rpx;
}

.card_top {
  display: flex;
  justify-content: space-between;
  margin-bottom: 23rpx;
}

.card_left {
  display: flex;
  font-size: 32rpx;
  font-weight: 600;
}

.card_right {
  color: #1a78fc;
  font-size: 24rpx;
}

.card_right .image {
  width: 22rpx;
  height: 22rpx;
}

.card_center {
  position: relative;
}

.card_center .img_content {
  position: absolute;
  bottom: 10rpx;
  left: 0;
  background-color: #000;
  opacity: 0.8;
  width: 647rpx;
  height: 73rpx;
  z-index: 99;
  color: #fff;
  line-height: 73rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
  border-radius: 0rpx 0rpx 10rpx 10rpx;
}

.card_center>image {
  width: 647rpx;
  height: 282rpx;
  border-radius: 10rpx;
}

.card_bottom {
  display: flex;
  align-items: center;
  /* justify-content: center; *//* margin-top: 22rpx; */
  box-shadow: 0px 0px 13px 0px rgba(176, 176, 176, 0.28);
}

.bottom_left {
  width: 80%;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding-top: 22rpx;
}

.people {
  width: 150rpx;
  font-size: 26rpx;
  color: #fb8600;
  text-align: center;
  border-right: 1rpx solid #000;
}

.time {
  font-size: 26rpx;
  color: #666;
  padding: 0 19rpx;
}

.activeAddress {
  color: #999;
  font-size: 24rpx;
  padding: 24rpx 20rpx;
}

.bottom-right {
  width: 133rpx;
  height: 45rpx;
  background: rgba(255, 255, 255, 1);
  border: 2rpx solid rgba(26, 120, 252, 1);
  border-radius: 23rpx;
  margin-right: 18rpx;
  line-height: 45rpx;
}

.look {
  font-size: 24rpx;
  color: rgba(26, 120, 252, 1);
  text-align: center;
}